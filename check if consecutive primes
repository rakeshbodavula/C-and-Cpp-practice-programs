#include<stdio.h>
int h=0, tmp1, tmp2, a[30];
int prime(int n)
{
	int i;
	for(i=2;i<n;i++)
	{
	    if(n%i==0)  return 0;
	}
	if(i==n)  return 1;
}	
int * cons_prime(int m, int n)
{
	if(prime(m) == 1 && prime(n) == 1)
	{
	    tmp1=m>n?m:n;
	    tmp2=m>n?n:m;
	    for(int i=2;i<=tmp1;i++)
	    {
	        if(prime(i)==1) 
	        {
	            a[h]=i;
	            h++;
	        }
	    }
	} 
	else
	printf("The entered numbers are not prime.\n");
	return a;
}       
int main()
{
	int m, n;
	int *p;
	printf("Enter two numbers: ");
	scanf("%d %d", &m, &n);
	p=cons_prime(m, n);
	for(int i=0;i<h-1;i++)
	{
	    if(tmp2==p[i]) 
	    {
	       if(tmp1==p[i+1])
	           printf("The given prime numbers are consecutive.\n");
	       else
	           printf("The given prime numbers are not consecutive.\n");
	    }
	}    
	return 0;
}
